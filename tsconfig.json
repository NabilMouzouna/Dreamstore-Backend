{
  "compilerOptions": {
    "target": "ES6",                          // Specify ECMAScript target version
    "module": "commonjs",                      // Specify module code generation
    "outDir": "./dist",                        // Redirect output structure to the dist directory
    "rootDir": "./src",                        // Specify the root directory of input files
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true                    // Enable ECMAScript Module interop
  },
  "include": ["src/**/*"],                     // Specify the files to be included
  "exclude": ["node_modules"]                  // Exclude unnecessary files from compilation
}